@page
@model BloggieWeb.Pages.Admin.Blogs.ListModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Add blog post</h1>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
            </tr>
        </thead>
        <tbody>
            @* the model.blogposts is from the cs file, public BlogPosts*@
            @foreach (var singleBlogPost in Model.BlogPosts)
            {
                <tr>
                    <td>@singleBlogPost.Id</td>
                    <td>@singleBlogPost.Heading</td>
                </tr>
            }
        </tbody>
    </table>
</div>